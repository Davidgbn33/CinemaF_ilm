{% extends 'layout.html.twig' %}

{% block content %}
    <section class=" text-center text-lg-start">
    <div class="container">
        <div class="card mb-3">
            <div class="row g-0 d-flex align-items-center">
                <div class="col-lg-12">
                    <div class="d-flex border-bottom mx-3">
                    <h2 class="ms-5 athengray">Home</h2>
                    <h2 class="ms-5"> <i class="fa-solid fa-arrow-right athengray"></i></h2>
                    <h2 class="ms-5 santasGray">Connexion</h2>
                      </div>
                    </div>
                <div class="col-lg-6">
                    <div class="card-body py-5 px-md-5">
                        <h5>Connexion</h5>
                        <form method="post">
                            <!-- Email input -->
                            <div class="form-outline mb-4 d-flex align-items-center">
                                <i class="fa-solid fa-envelope me-3"></i>
                                <input type="email" id="email" name="email" class="form-control " placeholder="email..." />
                                {% if error.email is not empty %}
                                    <p style="color: red">{{ error['email'] }}</p>
                                {% endif %}
                            </div>

                            <!-- Password input -->
                            <div class="form-outline mb-4 d-flex align-items-center ">
                                <i class="fa-solid fa-lock me-3"></i>
                                <input type="password" id="password" name="password" class="form-control" placeholder="Mot de passe"/>
                                {% if error.password is not empty %}
                                    <p style="color: red">{{ error['password'] }}</p>
                                {% endif %}
                            </div>

                            <!-- Submit button -->
                            <button type="submit" class="btn btn-outline-warning btn-block mb-4">Sign in</button>
                        </form>

                        <h6>Not a user yet? <a class="DG-color-yellow" href="/user/register">Register now!</a></h6>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </section>
    <script src="https://kit.fontawesome.com/5bc924b817.js" crossorigin="anonymous"></script>
{% endblock %}
